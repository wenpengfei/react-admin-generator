{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-scss"
  ],
  "ignoreAtRules": [
    ["mixin"]
  ],
  "rules": {
    "rule-empty-line-before": null,
    "selector-pseudo-element-colon-notation": null,
    "at-rule-no-unknown": [
      true, {
        "ignoreAtRules": ["mixin", "include"] 
      }
    ]
  }
}